
#append data in a file

#!/bin/bash
file1=$1 
file2=$2 
if [ $# -eq 2 ]
then 
	if [ -e $file1 ]
	then
	    if [ -r $file1 ]
	    then
	       echo " Readable file"
	       awk 'FS="|" NR>1{arr[$3]=$2} END {n=asorti(arr,arr_sorted);  print  "Highest scorer : " arr[arr_sorted[n-1]]}' $file1    
	    else
	       echo "Not readable "
	    fi
	  else
	echo "not exists"
	fi
else 
   echo "Pass two arguments" 
fi 
